<legend class="text-center mt-5">用户登陆</legend>

<div class="col-xs-12 col-sm-10 offset-sm-1 mt-4 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
  <%= simple_form_for "", url: sessions_path, method: :post do |f| %>
    <%= f.input :phone, label: "手机号:" %>
    <%= f.input :password, label: "密码:" %>
    <%= f.submit "提交", class: "btn btn-success mt-4 btn-block" %>
  <% end %>
  <small class="float-right mt-3"><%= link_to "没账号？去注册...", new_user_path, class: "link-to-sign-in" %></small>
</div>
